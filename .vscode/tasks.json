{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_unit_tests_debug",
            "type": "shell",
            "command": "cmake --build . --config Debug",
            "options": {
                "cwd": "${workspaceFolder}/native/build-debug"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_unit_tests_release",
            "type": "shell",
            "command": "cmake --build . --config Release",
            "options": {
                "cwd": "${workspaceFolder}/native/build-release"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_unit_tests_profile",
            "type": "shell",
            "command": "cmake --build . --config Debug",
            "options": {
                "cwd": "${workspaceFolder}/native/build"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_bridge_tests",
            "type": "shell",
            "command": "cmake --build . --config Debug --target bridge_test",
            "options": {
                "cwd": "${workspaceFolder}/native/build"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
    ]
}